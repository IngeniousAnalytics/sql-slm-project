# ========================================
# DATABASE CONFIGURATION
# ========================================
# Copy this file to .env and fill in your actual values

# Database Type: postgresql, mysql, sqlserver, oracle, sqlite
DB_TYPE=postgresql

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=your_database_name
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=your_database_name
MYSQL_USER=your_username
MYSQL_PASSWORD=your_password

# SQL Server Configuration
SQLSERVER_HOST=localhost
SQLSERVER_PORT=1433
SQLSERVER_DATABASE=your_database_name
SQLSERVER_USER=your_username
SQLSERVER_PASSWORD=your_password
SQLSERVER_DRIVER=ODBC Driver 17 for SQL Server

# Oracle Configuration
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=your_service_name
ORACLE_USER=your_username
ORACLE_PASSWORD=your_password

# SQLite Configuration
SQLITE_PATH=./data/your_database.db

# ========================================
# MODEL CONFIGURATION
# ========================================
BASE_MODEL_NAME=defog/sqlcoder-7b-2
MODEL_CACHE_DIR=./models/base
FINE_TUNED_MODEL_PATH=./models/fine_tuned

# Training Configuration
MAX_LENGTH=2048
BATCH_SIZE=4
LEARNING_RATE=2e-4
NUM_EPOCHS=3
LORA_R=16
LORA_ALPHA=32

# ========================================
# PATHS
# ========================================
SCHEMA_OUTPUT_PATH=./data/schemas/schema.json
TRAINING_DATA_PATH=./data/processed/training_data.json
RAW_QUERIES_PATH=./data/raw/historical_queries.csv

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO
LOG_FILE=./logs/sql_slm.log


# HUGGINGFACE_TOKEN: set this in your local .env (do NOT commit)
HUGGINGFACE_TOKEN=YOUR_HUGGINGFACE_TOKEN_HERE

